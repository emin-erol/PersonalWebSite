@model List<FooterWithSocialMediaDto>

@if (Model != null && Model.Count > 0)
{
    foreach (var item in Model)
    {
        <footer>
            <div class="row">
                <div class="col-six tab-full pull-right social">
                    <ul class="footer-social" style="margin-top: 20px;">
                        @if (item?.SocialMedias != null && item.SocialMedias.Any())
                        {
                            foreach (var socialMedia in item.SocialMedias)
                            {
                                var iconClass = !string.IsNullOrWhiteSpace(socialMedia?.IconUrl) ? socialMedia.IconUrl : "globe";
                                var url = !string.IsNullOrWhiteSpace(socialMedia?.SocialMediaUrl) ? socialMedia.SocialMediaUrl : "#";

                                <li>
                                    <a href="@url" target="_blank">
                                        <i class="fa fa-brands fa-@iconClass"></i>
                                    </a>
                                </li>
                            }
                        }
                        else
                        {
                            <li><span>No social media links available.</span></li>
                        }
                    </ul>
                </div>

                <div class="col-six tab-full" style="margin-top:20px;">
                    <div class="copyright">
                        <span>© Copyright @DateTime.Now.Year</span>
                        <span><strong>@(string.IsNullOrWhiteSpace(item?.Description) ? "No description provided." : item.Description)</strong></span>
                    </div>
                </div>
            </div>
        </footer>
    }
}
else
{
    <footer>
        <div class="row">
            <div class="col-12 text-center">
                <p>No footer information available.</p>
            </div>
        </div>
    </footer>
}
