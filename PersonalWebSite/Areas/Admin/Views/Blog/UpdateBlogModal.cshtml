@model UpdateBlogDto

@{
    ViewData["Title"] = "Update Blog";
    Layout = "~/Areas/Admin/Views/UILayout/Index.cshtml";
}

<h1>Blog Güncelle</h1>

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Blog İçeriğini Güncelle</h4>
                        <p class="card-subtitle mb-4">
                            Lütfen blogunuzu güncelleyin ve kaydedin.
                        </p>

                        <form method="post" asp-action="UpdateBlog" asp-controller="Blog">
                            <input type="hidden" asp-for="BlogId" />

                            <div class="form-group">
                                <label for="coverImageUrl">Kapak Fotoğrafı</label>
                                <input type="text" class="form-control" id="coverImageUrl" asp-for="CoverImageUrl" placeholder="Linki girin" required />
                            </div>

                            <div class="form-group">
                                <label for="Title">Başlık</label>
                                <input type="text" class="form-control" id="Title" asp-for="Title" placeholder="Blog başlığını girin" required />
                            </div>

                            <div class="form-group">
                                <label for="Content">İçerik</label>
                                <textarea class="form-control" id="Content" asp-for="Content" rows="10" placeholder="Blog içeriğini girin" required></textarea>
                            </div>

                            <button type="submit" class="btn btn-primary waves-effect waves-light">Blog'u Güncelle</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.ckeditor.com/4.22.1/standard/ckeditor.js"></script>

<script>
    CKEDITOR.replace('Content');
</script>