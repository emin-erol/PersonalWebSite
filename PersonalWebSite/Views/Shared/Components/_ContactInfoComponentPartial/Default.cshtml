@model List<ResultContactInfoDto>

<div class="row contact-info">
    @if (Model != null && Model.Any())
    {
        foreach (var item in Model)
        {
            <div class="col-four tab-full">
                <div class="icon">
                    <i class="@(string.IsNullOrWhiteSpace(item?.IconUrl) ? "fa fa-info-circle" : item.IconUrl)"></i>
                </div>

                <h5>@(string.IsNullOrWhiteSpace(item?.Title) ? "No Title" : item.Title)</h5>

                <p>@(string.IsNullOrWhiteSpace(item?.Description) ? "No description available." : item.Description)</p>
            </div>
        }
    }
    else
    {
        <div class="col-12 text-center">
            <p>No contact information available.</p>
        </div>
    }
</div>
