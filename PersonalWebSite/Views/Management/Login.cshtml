@model LoginDto

@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>PersonalWebSite | Giriş Yap</title>

    <link href="~/HTML5_Full_Version/HTML5_Full_Version/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/HTML5_Full_Version/HTML5_Full_Version/font-awesome/css/font-awesome.css" rel="stylesheet">

    <link href="~/HTML5_Full_Version/HTML5_Full_Version/css/animate.css" rel="stylesheet">
    <link href="~/HTML5_Full_Version/HTML5_Full_Version/css/style.css" rel="stylesheet">

</head>

<body class="gray-bg">

    <div class="middle-box text-center loginscreen animated fadeInDown">
        <div>
            <div>
                <img src="~/HTML5_Full_Version/HTML5_Full_Version/img/admin-login-logo.jpg" class="rounded-circle mt-5 mb-3" style="width: 150px;" alt="Logo">
            </div>
            <h2 class="my-4"><strong>Welcome</strong></h2>

            <form method="post" asp-action="Login" asp-controller="Management">

                <div class="form-group">
                    <input type="email" class="form-control" asp-for="Email" placeholder="Email" required>
                </div>

                <div class="form-group">
                    <input type="password" class="form-control" asp-for="Password" placeholder="Password" required>
                </div>

                <button type="submit" class="btn btn-primary block full-width m-b">Giriş Yap</button>

                <a href="/Management/ForgetPassword"><small>Forget Password?</small></a>
                <p class="text-muted text-center"><small>Don't You Have An Account?</small></p>
                <a class="btn btn-sm btn-white btn-block" href="/Management/Register/">Register</a>
            </form>

        </div>
    </div>

    <script src="~/HTML5_Full_Version/HTML5_Full_Version/js/jquery-3.1.1.min.js"></script>
    <script src="~/HTML5_Full_Version/HTML5_Full_Version/js/popper.min.js"></script>
    <script src="~/HTML5_Full_Version/HTML5_Full_Version/js/bootstrap.js"></script>

</body>

</html>