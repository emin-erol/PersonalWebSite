@model UpdateBannerDto

@{
    ViewData["Title"] = "UpdateBannerModal";
    Layout = "~/Areas/Admin/Views/UILayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Banner Bilgilerini Güncelleme</h4>
                        <p class="card-subtitle mb-4">
                            Bu alanda banner alanınızdaki veriler hakkında güncelleme yapabilirsiniz.
                        </p>
                        <form method="post">
                            <input type="hidden" asp-for="BannerId" />

                            <div class="form-group">
                                <label for="startMessage">Giriş Mesajı</label>
                                <input type="text" class="form-control" id="startMessage" asp-for="StartMessage" placeholder="Giriş Mesajını Giriniz" required>
                            </div>

                            <div class="form-group">
                                <label for="meetMessage">Tanıtım Mesajı</label>
                                <input type="text" class="form-control" id="meetMessage" asp-for="MeetMessage" placeholder="Tanıtım Mesajını Giriniz">
                            </div>

                            <div class="form-group">
                                <label for="title">Unvan</label>
                                <input type="text" class="form-control" id="title" asp-for="Title" placeholder="Unvanınızı Giriniz">
                            </div>

                            <button type="submit" class="btn btn-primary waves-effect waves-light">Banner'ı Güncelle</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>