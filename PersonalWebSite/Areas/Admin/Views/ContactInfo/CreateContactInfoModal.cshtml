@model CreateContactInfoDto

@{
    ViewData["Title"] = "CreateContactInfoModal";
    Layout = "~/Areas/Admin/Views/UILayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Yeni İletişim Bilgisi Ekleme</h4>
                        <p class="card-subtitle mb-4">
                            Eklemek istediğiniz yeni iletişim bilgisini lütfen doğru giriniz ve kaydet butonuna basınız.
                        </p>
                        <form method="post" asp-action="CreateContactInfo" asp-controller="ContactInfo">

                            <div class="form-group">
                                <label for="title">Başlık</label>
                                <input type="text" class="form-control" id="title" asp-for="Title" placeholder="Başlığı Giriniz" required>
                            </div>

                            <div class="form-group">
                                <label for="description">İçerik</label>
                                <input type="text" class="form-control" id="description" asp-for="Description" placeholder="İçeriği Giriniz" required>
                            </div>

                            <div class="form-group">
                                <label for="iconUrl">İkon Linki</label>
                                <input type="text" class="form-control" id="iconUrl" asp-for="IconUrl" placeholder="İkon Linkini Giriniz" required>
                            </div>

                            <button type="submit" class="btn btn-primary waves-effect waves-light">İletişim Bilgisini Kaydet</button>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>