@model List<FooterWithSocialMediaDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/UILayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Ana Sayfa Footer Alanı</h4>
                        <p class="card-subtitle mb-4">
                            Footer bilgilerini buradan yönetebilirsiniz.
                        </p>
                        <div class="table-responsive">
                            <table class="table mb-0">
                                <thead>
                                    <tr>
                                        <th>Açıklama</th>
                                        <th>Sosyal Medya</th>
                                        <th>Güncelle</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.Description</td>
                                            <td>
                                                @foreach (var socialMedia in Model[0].SocialMedias)
                                                {
                                                    <a href="#" class="btn btn-sm">
                                                        <i class="fa fa-brands fa-@socialMedia.IconUrl"></i>
                                                    </a>
                                                }
                                            </td>
                                            <td><a href="/Admin/Footer/UpdateFooterModal/@item.FooterId" class="btn btn-outline-success">Güncelle</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            @if (Model.Count == 0)
                            {
                                <a href="/Admin/Footer/CreateFooterModal" class="m-3 btn btn-outline-primary">Yeni Footer Ekle</a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>