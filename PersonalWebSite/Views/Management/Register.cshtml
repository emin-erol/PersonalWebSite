@model RegisterDto

@{
    ViewData["Title"] = "Register";
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>PersonalWebSite | Kayıt Ol</title>

    <link href="~/HTML5_Full_Version/HTML5_Full_Version/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/HTML5_Full_Version/HTML5_Full_Version/font-awesome/css/font-awesome.css" rel="stylesheet">
    <link href="~/HTML5_Full_Version/HTML5_Full_Version/css/plugins/iCheck/custom.css" rel="stylesheet">
    <link href="~/HTML5_Full_Version/HTML5_Full_Version/css/animate.css" rel="stylesheet">
    <link href="~/HTML5_Full_Version/HTML5_Full_Version/css/style.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" />

</head>

<body class="gray-bg">

    <div class="middle-box text-center loginscreen animated fadeInDown">
        <div>
            <div>

                <img src="~/HTML5_Full_Version/HTML5_Full_Version/img/admin-login-logo.jpg" class="rounded-circle mt-5 mb-3" style="width: 150px;" alt="Logo">

            </div>
            <h3 class="my-4">PersonalWebSite'ye Kayıt Olun</h3>
            <p>Kayıt olmak için aşağıdaki bilgileri doldurunuz.</p>

            <form method="post" asp-action="Register" asp-controller="Management">

                <div class="form-group">
                    <input type="text" class="form-control" asp-for="UserName" placeholder="Kullanıcı Adı" required>
                </div>

                <div class="form-group">
                    <input type="email" class="form-control" asp-for="Email" placeholder="Eposta" required>
                </div>

                <div class="form-group">
                    <input type="password" class="form-control" asp-for="Password" placeholder="Parola" required>
                </div>

                <div class="form-group">
                    <input type="password" class="form-control" asp-for="PasswordCheck" placeholder="Parola Tekrar" required>
                </div>

                <div class="form-group">
                    <div class="checkbox i-checks"><label> <input type="checkbox"><i></i> Kullanım şartlarını onaylıyorum. </label></div>
                </div>

                <button type="submit" class="btn btn-primary block full-width m-b">Kayıt Ol</button>

                <p class="text-muted text-center"><small>Zaten bir hesabınız var mı?</small></p>
                <a class="btn btn-sm btn-white btn-block" href="/Management/Login/">Giriş Yap</a>

            </form>

        </div>
    </div>

    <script src="~/HTML5_Full_Version/HTML5_Full_Version/js/jquery-3.1.1.min.js"></script>
    <script src="~/HTML5_Full_Version/HTML5_Full_Version/js/popper.min.js"></script>
    <script src="~/HTML5_Full_Version/HTML5_Full_Version/js/bootstrap.js"></script>
    <script src="~/HTML5_Full_Version/HTML5_Full_Version/js/plugins/iCheck/icheck.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.i-checks').iCheck({
                checkboxClass: 'icheckbox_square-green',
                radioClass: 'iradio_square-green',
            });
        });
    </script>
</body>

</html>
