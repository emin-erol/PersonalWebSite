@model UpdateFooterDto

@{
    ViewData["Title"] = "UpdateFooterModal";
    Layout = "~/Areas/Admin/Views/UILayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Footer Bilgilerini Güncelleme</h4>
                        <p class="card-subtitle mb-4">
                            Bu alanda footer alanınızdaki veriler hakkında güncelleme yapabilirsiniz.
                        </p>
                        <form method="post">
                            <input type="hidden" asp-for="FooterId" />

                            <div class="form-group">
                                <label for="description">Açıklama</label>
                                <input type="text" class="form-control" id="description" asp-for="Description" placeholder="Açıklama Giriniz" required>
                            </div>

                            <button type="submit" class="btn btn-primary waves-effect waves-light">Footer'ı Güncelle</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>