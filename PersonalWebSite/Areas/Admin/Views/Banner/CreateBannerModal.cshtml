@model CreateBannerDto

@{
    ViewData["Title"] = "CreateBannerModal";
    Layout = "~/Areas/Admin/Views/UILayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Yeni Banner Girişi</h4>
                        <p class="card-subtitle mb-4">
                            Eklemek istediğiniz yeni Banner alanını lütfen doğru giriniz ve kaydet butonuna basınız.
                        </p>
                        <form method="post" asp-action="CreateBanner" asp-controller="Banner">

                            <div class="form-group">
                                <label for="startMessage">Giriş Mesajı</label>
                                <input type="text" class="form-control" id="startMessage" asp-for="StartMessage" placeholder="Giriş Mesajını Giriniz" required>
                            </div>

                            <div class="form-group">
                                <label for="meetMessage">Tanıtım Mesajı</label>
                                <input type="text" class="form-control" id="meetMessage" asp-for="MeetMessage" placeholder="Tanıtım Mesajını Giriniz" required>
                            </div>

                            <div class="form-group">
                                <label for="title">Unvan</label>
                                <input type="text" class="form-control" id="title" asp-for="Title" placeholder="Unvanınızı Giriniz" required>
                            </div>

                            <button type="submit" class="btn btn-primary waves-effect waves-light">Banner'ı Kaydet</button>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>